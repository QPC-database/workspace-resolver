{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "overrides": [
        {
            "files": [
                "**/*.spec.js"
            ],
            "env": {
                "jest": true
            }
        }
    ],
    "rules": {
      "comma-dangle": ["error", "always-multiline"]
    }
}
